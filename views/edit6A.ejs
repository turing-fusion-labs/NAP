<html>
    <head>
		<!--Import Google Icon Font-->
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<!--Import materialize.css-->
		<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"  media="screen,projection"/>

		<!--Let browser know website is optimized for mobile-->
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	</head>
	<body align="center" class="container">
		<div class="row">
			<div class="col s12">
				<h4>PACE AGENDA 6A</h4>
				<h6 style="color:red"> <%= error %> </h6>
				<form align="center" action="/save6A" method="POST" class="card" style="padding: 5px; margin:0 10px 0 10px">
				<textarea id="agenda" name="agenda" class="materialize-textarea"><%= agenda %></textarea>

				<div class="row">
					<div class="input-field col s5">
						<input id="loginName" name="loginName" type="text" class="validate">
						<label for="loginName">Login</label>
					</div>
					<div class="col s2"></div>
					<div class="input-field col s5">
						<input id="pwd" name="pwd" type="password" class="validate">
						<label for="pwd">Password</label>
					</div>
				</div>
				<button type="submit" value="save" class="btn waves-effect waves-light" >Save</button>
				</form>
			</div>
		</div>
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
	</body>
</html>
